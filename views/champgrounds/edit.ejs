<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=cg.name %></h1>
        <div style="width: 30%; margin: 0 auto;">
        <form  method="POST" action="/index/<%=cg._id%>?_method=PUT" >
            <div class="form-group"><input class="form-control" type="text" name="cg[name]" value="<%= cg.name %>"></div>
            <div class="form-group"><input class="form-control" type="text" name="cg[image]" value="<%= cg.image %>"></div>
            <div class="form-group"><input class="form-control" type="number" name="cg[price]" value="<%= cg.price %>"></div>
            <div class="form-group"><input class="form-control" type="text" name="cg[description]"value="<%= cg.description %>"></div>
            <div class="form-group"><button class="btn btn-md btn-primary">Submit</button></div>
            <a href="/index">Go back</a>
        </form>
        </div>
    </div>
</div>
