<%- include('../partials/header.ejs') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to camp grounds</h1>
        <p>View the most beauiful places</p>
        <p><a class="btn btn-primary btn-lg" href="/index/new">Add a champ</a></p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% allCg.forEach(function(cg){ %>
                <div class="col-md-6 col-sm-6">
                    <div class="card">       
                         <img style="height: 100%; width: 100%;" src="<%= cg.image %>" class="card-img-top" height="auto">
                         <div class="card-body">               
                        <h4><%=cg.name %></h4>
                         </div>
                        <p><a href="/index/<%=cg._id%>" class="btn btn-primary">More Info</a></p>
                    </div>
                </div>
            <% }); %>    
        </div>
    </div>
    </div>
<%- include('../partials/footer.ejs') %>
